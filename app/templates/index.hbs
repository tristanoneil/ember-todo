<table class="table table-striped">
  <tbody>
    {{#each itemController="todo"}}
      <tr>
        <td width="2%"><input type="checkbox" {{action "markDone"}} {{bind-attr checked="done"}}></td>
        <td><span {{bind-attr class="done"}}>{{name}}</span></td>
        <td class="text-right">
          <button {{action "removeTodo"}} class="remove btn btn-primary btn-xs">Remove</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{#unless model}}
  <div class="alert alert-info">Yo dawg you have nothing todo.</div>
{{/unless}}
